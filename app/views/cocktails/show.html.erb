<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h5><strong>Doses: </strong></h5>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Remove", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}%></li>
    <% end %>
  </ul>
  <p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to 'Back to cocktails list', cocktails_path %></p>
</div>
