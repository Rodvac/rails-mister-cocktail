<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <h1><%= @cocktail.name %></h1>
  </div>
  <h5><strong>Doses: </strong></h5>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "Remove", dose_path(dose), method: :delete, data: {confirm: "Are you sure?"}%></li>
    <% end %>
  </ul>
  <p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to 'Back to cocktails list', cocktails_path %></p>
  <p><%= link_to "Delete", cocktail_path, method: :delete, data: {confirm: "Are you sure?"} %></p>
</div>




