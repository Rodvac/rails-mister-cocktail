<div class="container">
  <div class="index-title">
    <h1>My fav cocktails</h1>
  </div>
  <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="card" style="width: 18rem;">
          <%= image_tag "logo2.jpg", class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= cocktail.name %></h5>
            <% cocktail.doses.each do |dose| %>
              <p><%= dose.ingredient.name %></p>
            <% end %>
            <p><%= link_to 'See more', cocktail_path(cocktail), :class => 'btn btn-primary' %><p>
          </div>
        </div>
      <% end %>
  </div>
</div>






