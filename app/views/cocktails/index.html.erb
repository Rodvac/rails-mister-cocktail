<div class="container">
  <h1>My fav cocktails</h1>
    <ul></ul>
      <% @cocktails.each do |cocktail| %>
        <li><%= link_to cocktail.name, cocktail_path(cocktail) %>
            | <%= link_to "Delete", cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"} %>
        </li>
      <% end %>
    </ul>
  <br>
  <p><%= link_to 'Add a cocktail', new_cocktail_path%></p>
</div>



